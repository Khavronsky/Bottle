<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold0"
    tools:context="com.khavronsky.bottle.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_marginTop="50dp"
        android:background="@color/water1">

        <android.support.v4.view.ViewPager
            android:id="@+id/my_pager"
            android:layout_width="128dp"
            android:layout_height="176dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/tv_title_of_capacity"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="212dp"
            android:text="Title" />

        <FrameLayout
            android:layout_width="196dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="243dp">


            <ImageButton
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="right"
                app:srcCompat="@mipmap/ic_water_plus" />

            <ImageButton
                android:id="@+id/button_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="left"
                app:srcCompat="@mipmap/ic_water_minus" />

            <TextView
                android:id="@+id/tv_value_of_capacity"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:text="int Capacity" />
        </FrameLayout>

        <com.khavronsky.bottle.CirclesSlideIndicator
            android:id="@+id/circlesSlideIndicator"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="286dp"
            app:defaultColor="#ced1d6"
            app:focusedColor="#95dffa"
            app:margin="24dp"
            app:radius="4dp" />

    </FrameLayout>
</FrameLayout>
